

<h2>burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are not devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{/if}}
  {{/each}}
</ul>

<div align="center">
<img src="assets/img/burger.png" width="200px" height="150px">
</div>

<h2>Add a burger</h2>
<form class="create-form">

<div align="center">
  <div class="form-group">
    <label for="ca">burger name:</label>
    <input type="text" id="ca" burger_name="burger_name" size="50" width="200">
  </div>
</div>

  <div class="form-group">
    <input type="radio" name="devoured" value="1" checked> devoured <br>
  </div>

  <button type="submit">Add burger</button>
</form>
